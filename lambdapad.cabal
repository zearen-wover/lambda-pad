name:                lambdapad
version:             0.0.0.0
synopsis:            Allows one to control the mouse and keyboard with a gamepad.
-- description:         
homepage:            http://github.com/zearen-wover/lambdapad
license:             BSD3
license-file:        LICENSE
author:              Zie Weaver
maintainer:          zearen.wover@gmail.com
-- copyright:           
category:            Game
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable lambdapad
  main-is:             lambdapad.hs
  other-modules:
    Game.LambdaPad.Pads.F310
    Game.LambdaPad.Games.GuildWars2
  build-depends:
    base >= 4.7 && < 5.0,
    cond >= 0.3 && < 0.5,
    hashmap >= 1.1 && < 1.4,
    lens >= 3.0 && < 5.0,
    mtl >= 2.0 && < 3.0,
    sdl2 >= 2.0 && < 3.0,
    transformers >= 0.2 && < 0.5,
    vector >= 0.10 && < 0.11,
    xhb
  hs-source-dirs: src
  default-language: Haskell2010
  ghc-options: -Wall -funbox-strict-fields -threaded

library
  hs-source-dirs: src
  default-language: Haskell2010
  exposed-modules:
    Game.LambdaPad
  other-modules:
    Game.LambdaPad.Internal
  build-depends:
    base >= 4.7 && < 5.0,
    hashmap >= 1.1 && < 1.4,
    lens >= 3.0 && < 5.0,
    mtl >= 2.0 && < 3.0,
    sdl2 >= 2.0 && < 3.0,
    transformers >= 0.2 && < 0.5,
    vector >= 0.10 && < 0.11,
    xhb
  ghc-options: -Wall -funbox-strict-fields -threaded
